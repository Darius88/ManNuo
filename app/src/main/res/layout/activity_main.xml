<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y100"
        android:text="@string/ble_scan_top_hint"
        android:textColor="@color/connect_gray_text"
        android:textSize="@dimen/x32" />



    <RelativeLayout
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/x500"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_blue_scan_bg"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_blue_scan_nal"
            />

        <com.src.mannuo.view.SearchBlueImageView
            android:id="@+id/iv_blue_scan_rote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_blue_scan_rota"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_search_connect_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y200"
        android:text="@string/ble_scan_hint"
        android:textColor="@color/connect_gray_text"
        android:textSize="@dimen/x40" />

</RelativeLayout>
